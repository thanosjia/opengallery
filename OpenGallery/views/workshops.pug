doctype html
html(lang='en')
    head 
        title Open Gallery
        link(rel="stylesheet", href="/styles.css")
    body 
        header 
            nav 
                a(href='/') Home
                if loggedIn
                    a(href='/logout') Logout
                    a(href='/user/' + loggedInUserId) Profile
                else
                    a(href='/login') Login
                    a(href='/user') Sign Up
                a(href='/artworks') Artworks
                a(href='/search') Search Gallery
        h1 Workshops
        ul.link-list
            each workshop in workshops
                li
                    a(href='/workshops/' + workshop._id.toString()) #{workshop.Title}
